{
    "name": "diarsa/laravel-where-like",
    "description": "A Laravel package that simplifies searching across multiple fields, including related models, using Laravel's query builder in an efficient way.",
    "keywords": [
        "diarsa",
        "laravel",
        "laravel-where-like",
        "search",
        "eloquent",
        "query-builder"
    ],
    "homepage": "https://github.com/diarsa/laravel-where-like",
    "license": "MIT",
    "authors": [
        {
            "name": "Bayu Diarsa",
            "email": "diarsadev@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^10.0||^11.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1.1||^7.10.0",
        "larastan/larastan": "^2.9",
        "orchestra/testbench": "^9.0.0||^8.22.0"
    },
    "autoload": {
        "psr-4": {
            "Diarsa\\LaravelWhereLike\\": "src/",
            "Diarsa\\LaravelWhereLike\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Diarsa\\LaravelWhereLike\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-laravel-where-like --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Diarsa\\LaravelWhereLike\\LaravelWhereLikeServiceProvider"
            ],
            "aliases": {
                "LaravelWhereLike": "Diarsa\\LaravelWhereLike\\Facades\\LaravelWhereLike"
            }
        }
    },
    "minimum-stability": "beta",
    "prefer-stable": true
}
